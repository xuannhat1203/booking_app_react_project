                }
              ]
            }
          }
        },
        {
          "name": "Filter Rooms - Rating Desc",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/rooms/filter?sortBy=rating_desc&minPrice=100&maxPrice=500",
              "host": ["{{base_url}}"],
              "path": ["rooms", "filter"],
              "query": [
                {
                  "key": "sortBy",
                  "value": "rating_desc"
                },
                {
                  "key": "minPrice",
                  "value": "100"
                },
                {
                  "key": "maxPrice",
                  "value": "500"
                }
              ]
            }
          }
        },
        {
          "name": "Filter Rooms - By Address",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/rooms/filter?address=Mumbai&sortBy=price_asc",
              "host": ["{{base_url}}"],
              "path": ["rooms", "filter"],
              "query": [
                {
                  "key": "address",
                  "value": "Mumbai"
                },
                {
                  "key": "sortBy",
                  "value": "price_asc"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Hotels",
